# Media path where STRM files will be created/updated
# This should match the volume mount path in docker-compose.yml
MEDIA_PATH=/app/media

# Base URL of the Playarr API server (required)
# The application will fetch from: {PLAYARR_BASE_URL}/api/playlist/movies/data and {PLAYARR_BASE_URL}/api/playlist/shows/data
PLAYARR_BASE_URL=http://localhost:5000

# API key for authenticating with Playarr API (required)
PLAYARR_API_KEY=your_api_key_here

# Cron expression for sync interval (default: every hour at minute 0)
# Format: minute hour day month day-of-week
SYNC_INTERVAL=0 * * * *
